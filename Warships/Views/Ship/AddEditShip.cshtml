@model Warships.Models.ShipViewModel
@{
    var isEditMode = Model.ShipId != null;
    ViewBag.Title = isEditMode ? "Edit " + Model.FullName : "Add Ship";
}

<h2>@Model.FullName</h2>

<div class="row">
    <div class="col-sm-6 col-xs-10">
        @using (Html.BeginForm(isEditMode ? "EditShip" : "AddShip", "Ship"))
        {
            @Html.HiddenFor(m => m.ShipId)
            <div class="form-group">
                @Html.LabelFor(m => m.ShipTypeId)
                @Html.TextBoxFor(m => m.ShipTypeId, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ShipName)
                @Html.TextBoxFor(m => m.ShipName, new { @class = "form-control" })
            </div>
            <button type="submit" class="btn btn-primary">@(isEditMode ? "Save" : "Add")</button>
            @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default" })
        }
    </div>
</div>